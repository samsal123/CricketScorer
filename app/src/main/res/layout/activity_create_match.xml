<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="prisam.com.cricketscorer.CreateMatch">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Back to main menu"
            android:id="@+id/backfromCreateMatch"
            android:background="@android:color/transparent" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Date&amp;Time"
            android:id="@+id/textView7" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/editdatetime" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Venue"
            android:id="@+id/textView8" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/matchVenue" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Overs"
                android:id="@+id/textView3" />
            <Space
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Innings"
                android:id="@+id/textView4" />
            <Space
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Days     "
                android:id="@+id/textView5" />


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <EditText
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:background="@drawable/myedittext"
                android:id="@+id/matchOvers" />
            <Space
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <EditText
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:background="@drawable/myedittext"
                android:id="@+id/matchInns" />
            <Space
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <EditText
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:background="@drawable/myedittext"
                android:id="@+id/matchDays" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:weightSum="1">

            <Button
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="Select Home Team"
                android:id="@+id/selectHomeTeam" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="VS"
                android:textAlignment="center"
                android:layout_weight="1"
                android:id="@+id/textView6" />

            <Button
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="select Away team"
                android:id="@+id/selectAwayTeam" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="TOSS WON BY"
            android:id="@+id/textView11" />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp">


        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:minHeight="2dp"
            android:maxHeight="2dp"
            android:progressDrawable="@drawable/progress"
            android:thumb="@drawable/thumb"
            android:progress="50"
            android:onClick="seekBar"
            android:layout_weight="0.66"
            android:background="@drawable/abc_seekbar_tick_mark_material" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="OPTED TO"
            android:id="@+id/textView12" />
        <Space
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="10dp"/>
        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:textOff="BAT"
            android:textOn="BOWL"
            android:id="@+id/toggleButton"
            android:layout_gravity="center_horizontal" />
        <Space
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="10dp"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="START MATCH"
        android:id="@+id/matchStart"
        android:layout_gravity="right" />


</LinearLayout>
